<div class="navbar-header">
  <%= link_to raw("<i class='fa fa-home fa-3x'></i>"), root_path, :class => 'navbar-brand' %>
</div>

<div class="navbar-collapse collapse navbar-responsive-collapse">
  <ul class="nav navbar-nav">
    <% if user_signed_in? %>
      <% if user_admin %>
        <li>
        <%= link_to(t('views.nav.admin'), admin_index_path) %>
        </li>
      <% end %>
      <li>
        <%= link_to(t('views.nav.start_tour'), '#', :id => 'start-tour') %>
      </li>
      <li>
      <%= link_to(t('views.nav.settings'), edit_user_registration_path) %>
      </li>
    <% end %>
    <li>
      <%= link_to(t('views.nav.donate'), '/help') %>
    </li>
    <% if user_signed_in? %>
      <li>
      <%= link_to(t('views.nav.logout'), destroy_user_session_path, :method=>'delete') %>
      </li>
    <% end %>
  </ul>
  <ul class="nav navbar-nav navbar-right" id='tour_social'>
    <li>
      <div id="vk_like"></div>
    </li>
    <li>
      <div id="fb-root"></div>
      <div class="fb-like" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
    </li>
    <li>
      <%= render 'layouts/metrika' %>
    </li>
  </ul>
</div>
