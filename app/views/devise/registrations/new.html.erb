<div class='row'>
  <div class='col-lg-3'></div>
  <div class='col-lg-6'>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Регистрация пользователя</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class='row'>
            <div class='col-lg-4'>
              <%= f.label 'Email' %>
            </div>
            <div class='col-lg-8'>
              <%= f.email_field :email, :class => 'form-control' %>
            </div>
          </div><br/>
          <div class='row'>
            <div class='col-lg-4'>
              <%= f.label 'Пароль' %>
            </div>
            <div class='col-lg-8'>
              <%= f.password_field :password, :autocomplete => "off", :class => 'form-control'  %>
            </div>
          </div><br/>
          <div class='row'>
            <div class='col-lg-4'>
              <%= f.label 'Подтверждение' %>
            </div>
            <div class='col-lg-8'>
              <%= f.password_field :password_confirmation, :class => 'form-control'  %>
            </div>
          </div>
          <br/>
          <%= link_to "Регистрация", "#",:onclick=>"$('form').submit()" ,:class => 'btn btn-success btn-lg btn-block' %>
          <%= f.submit :style => 'position: absolute; left: -9999px' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class='col-lg-3'></div>
</div>
