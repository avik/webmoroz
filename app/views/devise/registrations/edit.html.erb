<% devise_error_messages! %>
<div class='row'>
  <div class='col-lg-3'></div>
  <div class='col-lg-6'>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('views.users.edit.title')%></h3>
      </div>
      <div class="panel-body">
        <div class='row'>
          <div class='col-lg-12'>
            <%= render 'form_edit'%>
          </div> 
        </div>
        <div class='row'>
          <div class='col-lg-12'>
            <div class="btn-group btn-group-justified">
            <%= link_to t('views.users.edit.refresh'), "#",:onclick=>"$('form').submit()" ,:class => 'btn btn-primary' %>
            <%= link_to t('views.users.edit.destroy'), registration_path(resource_name), :data => { :confirm => t('views.users.edit.destroy_confirm') }, :method => :delete, :class => 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='col-lg-3'></div>
</div>
